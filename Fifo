#include<stdio.h>
int main(){
    int p,f,page[30],frame[30],i,j,pagefault=0,next=0;
     printf("Enter number of pages: ");
    scanf("%d", &p);
    printf("Enter the page reference string: ");
    for (i = 0; i < p; i++) {
        scanf("%d", &page[i]);
    }
     printf("Enter number of frames: ");
    scanf("%d", &f);
    for (i = 0; i < f; i++) {
        frame[i] = -1;
    }
    for(i=0;i<p;i++){
        int empty_found=0,hit=0;
        for(j=0;j<f;j++){
            if(frame[j]==page[i]){
                hit=1;
                break;
            }
          }
        if(!hit){
                frame[next]=page[i];
                next=(next+1)%f;
                pagefault++;
        }
        printf("\nframes after %d:",page[i]);
        for(j=0;j<f;j++){
            if(frame[j]!=-1){
                printf("%d",frame[j]);
            }
            else{
                printf("-");
            }
        }
        if(!hit){
            printf("pagefault");
        }
        else{
            printf("hit");
        }
        
    }
    printf("\nTotal Page Faults: %d\n", pagefault);

    return 0;
}
