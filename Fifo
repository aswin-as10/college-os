#include <stdio.h>

int main() {
    int frames[10], pages[30];
    int n, m, pageFaults = 0, flag, i, j, k = 0;

    // Input
    printf("Enter number of frames: ");
    scanf("%d", &n);

    printf("Enter number of pages: ");
    scanf("%d", &m);

    printf("Enter the reference string:\n");
    for (i = 0; i < m; i++) {
        scanf("%d", &pages[i]);
    }

    // Initialize frames as empty (-1 means empty)
    for (i = 0; i < n; i++) {
        frames[i] = -1;
    }

    printf("\nPage Replacement Process (FIFO):\n");

    // Process each page in the reference string
    for (i = 0; i < m; i++) {
        flag = 0;

        // Check if page already exists in frames
        for (j = 0; j < n; j++) {
            if (frames[j] == pages[i]) {
                flag = 1;   // page hit (no fault)
                break;
            }
        }

        // Page Fault occurs if flag == 0
        if (flag == 0) {
            frames[k] = pages[i];       // Replace using FIFO
            k = (k + 1) % n;            // Move pointer circularly
            pageFaults++;

            // Print current frame status
            printf("For %d -> ", pages[i]);
            for (j = 0; j < n; j++) {
                if (frames[j] != -1)    // If frame has a page
                    printf("%d ", frames[j]);
                else                    // If frame is empty
                    printf("- ");
            }
            printf("\n");
        }
    }

    printf("\nTotal Page Faults = %d\n", pageFaults);
    return 0;
}
