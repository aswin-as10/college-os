#include <stdio.h>

int main() {
    int frames[10], pages[30], freq[10];
    int n, m, i, j, count = 0, pageFaults = 0;

    printf("Enter number of frames: ");
    scanf("%d", &n);

    printf("Enter number of pages: ");
    scanf("%d", &m);

    printf("Enter the reference string:\n");
    for (i = 0; i < m; i++) {
        scanf("%d", &pages[i]);
    }

    for (i = 0; i < n; i++) {
        frames[i] = -1;
        freq[i] = 0;
    }

    printf("\nPage Replacement Process (LFU):\n");

    for (i = 0; i < m; i++) {
        int found = 0;

        // Check if page already in frame (HIT)
        for (j = 0; j < n; j++) {
            if (frames[j] == pages[i]) {
                freq[j]++;
                found = 1;
                break;
            }
        }

        if (!found) { // Page Fault
            if (count < n) {
                frames[count] = pages[i];
                freq[count] = 1;
                count++;
            } else {
                int minIndex = 0;
                for (j = 1; j < n; j++) {
                    if (freq[j] < freq[minIndex]) {
                        minIndex = j;
                    }
                }
                frames[minIndex] = pages[i];
                freq[minIndex] = 1;
            }

            pageFaults++;

            printf("For %d -> ", pages[i]);
            for (j = 0; j < n; j++) {
                if (frames[j] != -1)
                    printf("%d ", frames[j]);
                else
                    printf("- ");
            }
            printf("\n");
        }
    }

    printf("\nTotal Page Faults = %d\n", pageFaults);
    return 0;
}
