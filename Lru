#include<stdio.h>
int main() {
    int p,f,frame[30],page[30],recent[30];
    int i,j,lru_index=0,min_time=0,pagefault=0,time=0;

    printf("Enter number of pages: ");
    scanf("%d", &p);
    printf("Enter the page reference string: ");
    for (i = 0; i < p; i++) {
        scanf("%d", &page[i]);
    }

    printf("Enter number of frames: ");
    scanf("%d", &f);

    for (i = 0; i < f; i++) {
        frame[i] = -1;
        recent[i] = 0;
    }

    for (i = 0; i < p; i++) {
        int hit = 0, empty_found = 0;
        time++;

        // check for hit
        for (j = 0; j < f; j++) {
            if (frame[j] == page[i]) {
                hit = 1;
                recent[j] = time;
                break;
            }
        }

        if (!hit) {
            pagefault++;

            // check for empty frame
            for (j = 0; j < f; j++) {
                if (frame[j] == -1) {
                    frame[j] = page[i];
                    recent[j] = time;
                    empty_found = 1;
                    break;
                }
            }

            // replace least recently used
            if (!empty_found) {
                min_time = recent[0];
                lru_index = 0;
                for (j = 1; j < f; j++) {   // âœ… changed to start from 1
                    if (recent[j] < min_time) {
                        min_time = recent[j];
                        lru_index = j;
                    }
                }
                frame[lru_index] = page[i];
                recent[lru_index] = time;
            }
        }

        printf("\nFrames after page %d: ", page[i]);
        for (j = 0; j < f; j++) {
            if (frame[j] != -1)
                printf("%d ", frame[j]);
            else
                printf("- ");
        }
        if (!hit)
            printf("  (Page Fault)\n");
        else
            printf("  (Hit)\n");
    }

    printf("Total page faults: %d\n", pagefault);
    return 0;
}
