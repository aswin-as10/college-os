#include <stdio.h>

int main() {
    int frames[10], pages[30];
    int n, m, pageFaults = 0, flag, i, j, k, least, count = 0;

    printf("Enter number of frames: ");
    scanf("%d", &n);

    printf("Enter number of pages: ");
    scanf("%d", &m);

    printf("Enter the reference string:\n");
    for (i = 0; i < m; i++) {
        scanf("%d", &pages[i]);
    }

    for (i = 0; i < n; i++) {
        frames[i] = -1;
    }

    printf("\nPage Replacement Process (LRU):\n");

    for (i = 0; i < m; i++) {
        flag = 0;
        for (j = 0; j < n; j++) {
            if (frames[j] == pages[i]) {
                flag = 1;  // page hit
                break;
            }
        }

        if (flag == 0) {  // page fault
            if (count < n) {
                frames[count] = pages[i];
                count++;
            } else {
                int used[10];
                for (j = 0; j < n; j++) {
                    used[j] = -1;
                    for (k = i - 1; k >= 0; k--) {
                        if (frames[j] == pages[k]) {
                            used[j] = k;
                            break;
